<FilesMatch "^(\..*)$">
Order allow,deny
</FilesMatch>
Options -Indexes
AddType text/cache-manifest appcache
AddType 'application/pgp-keys' asc
AddType 'text/html; charset=UTF-8' html
AddType image/x-icon .ico
AddCharset UTF-8 .html
ErrorDocument 404 https://daniel-ruf.de
<IfModule mod_rewrite.c>
RewriteEngine on
RewriteRule "(^|/)\." - [F]
RewriteCond %{HTTP_HOST} 85.13.149.245
RewriteRule .* - [F]
#RewriteCond %{HTTPS} off
#RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^ https://%1%{REQUEST_URI} [L,R=301]
</IfModule>
<IfModule mod_headers.c>
ServerSignature Off
Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
Header always set Vary Accept-Encoding
Header always set X-XSS-Protection "1; mode=block"
Header always set X-Content-Type-Options "nosniff"
Header always set X-Frame-Options "SAMEORIGIN"
Header always set Content-Security-Policy "script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; object-src 'none'"
Header always set Cache-Control "no-transform"
#Header always unset X-Powered-By
Header always set X-UA-Compatible "ie=edge"
</IfModule>